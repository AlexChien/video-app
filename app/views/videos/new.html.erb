<h2>New Video</h2><br />

<% form_for(@video, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <table id = "new_video">
    <tr>
      <td class = "td-left"><%= f.label :title %>: </td><td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <td class = "td-left"><%= f.label :description %>: </td><td><%= f.text_area :description, :class => 'text' %></td>
    </tr>
    <tr>
    	<td class = "td-left"><%= f.label :tags %>: </td><td><%= f.text_field :tag_list %></td>
    </tr>
<!--    <tr>
      <td class = "td-left"><%= f.label :url %>: </td><td><%= f.text_field :url %></td>
    </tr>-->
    <tr>
      <td class = "td-left"><%= f.label :video %>: </td><td><%= f.file_field :uploaded_data, :class => 'file', :size => '20' %></td>
    </tr>   
    
    <tr><td></td><td><br /><%= f.submit 'Submit', :class => 'submit' %> - <%= link_to 'Back', videos_path %></td></tr>
    <tr><td></td><td><span class = "red">Note, it may take several 
minutes for the video to upload.  Just click Submit once, and be patient 
:)</span></td></tr>
  </table>

<% end %>

