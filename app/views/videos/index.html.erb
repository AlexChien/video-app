<h2>视频列表</h2>

<hr />

<div class="span-24"><%= will_paginate @videos %></div>
<hr class="space"/>

<% @videos.each do |video| %>
<div class="prepend-1 span-5">
  <a href = "<%= video_url(video) %>" class = "video_thumb">
    <%#= video.thumbnail ? image_tag(video.thumbnail.public_filename) : "No Thumbnail Available" %>
    <%= image_tag video.asset.url(:small), :alt => video.filename %>
    <p><%= video.title %></p>
    <p><%= video.user.login %> 上传</p>
  </a>
</div>
<% end %>

<div class="span-24"><%= will_paginate @videos, :class => "pagination page-wide" %></div>
<hr class="space"/>

