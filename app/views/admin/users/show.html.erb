<!-- 管理页面 用户详细信息显示 开始 -->
<div class="span-4"<h2>用户详细信息</h2></div>
<% if current_user && current_user.has_role?('admin') %>
<div class="button">
  <%= link_to "审核、编辑用户", edit_admin_user_path(@user) %>
</div>	  
<% end %>  
<hr />
  
<!-- 用户视频列表 开始 -->
<h2>用户视频列表</h2>
<hr />

<div class="prepend-1 span-18">
<%= link_to "全部视频", admin_videos_path %>
<%= link_to "待审核视频", admin_videos_path(:state => 'pending') %>
<%#= link_to "已审核视频", admin_videos_path(:state => 'audited') %>
<%= link_to "不需要编码的视频", admin_videos_path(:state => 'no_encoding') %>
<%= link_to "进入编码队列视频", admin_videos_path(:state => 'queued_up') %>
<%= link_to "编码中视频", admin_videos_path(:state => 'converting') %>
<%= link_to "已编码视频", admin_videos_path(:state => 'converted') %>
<%= link_to "编码出错视频", admin_videos_path(:state => 'error') %>
<%= link_to "已取消视频", admin_videos_path(:state => 'canceled') %>
<%= link_to "已删除视频", admin_videos_path(:state => 'soft_deleted') %>
</div>
<hr class="space"/>
<hr />

<div class="span-19"><%= will_paginate @videos %></div>
<hr class="space"/>

<% @videos.each do |video| %>
<div class="prepend-1 span-3">
  <a href = "<%= edit_admin_video_url(video) %>" class = "video_thumb">
    <%= image_tag video.asset.url(:tiny), :alt => video.filename %>
  </a>
</div>
<div class="span-7">
  <p>标题: <%= link_to video.title, edit_admin_video_url(video) %></p>
  <p>上传用户: <%= link_to video.user.login, user_path(video.user) %></p>
</div>
<div class="span-3">
  <span>状态</span>:
  <p><%= video.state %></p>
</div>
<div class="span-4">
  <p>操作人</p>
  <p>操作时间</p>
</div>
<hr />
<% end %>

<div class="span-19"><%= will_paginate @videos, :class => "pagination page-wide" %></div>
<hr class="space"/>
<!-- 用户视频列表 结束 -->

<!-- 管理页面 用户详细信息显示 结束 -->