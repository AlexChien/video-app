<% if current_user && (current_user.has_role?('admin') || current_user.login == @user.login) %>
<!-- 用户信息栏 开始 -->
<h3 class="alt"><%= @user.login %>的账号信息</h3>

<b><%= t("login_account") %>:</b><br />
<%=h @user.login %>
<br />
<b><%= t("login_count") %>:</b><br />
<%=h @user.login_count %>
<br />
<b><%= t("last_request_at") %>:</b><br />
<%=h @user.last_request_at.to_s(:db) %>
<br />
<b><%= t("last_login_at") %>:</b><br />
<%=h (@user.last_login_at ? @user.last_login_at.to_s(:db) : t("first_login")) %>
<br />
<b><%= t("current_login_at") %>:</b><br />
<%=h @user.current_login_at.to_s(:db) %>
<br />
<b><%= t("last_login_ip") %>:</b><br />
<%=h @user.last_login_ip %>
<br />
<b><%= t("current_login_ip") %>:</b><br />
<%=h @user.current_login_ip %>
<!-- 用户信息栏 结束 -->
<% end %>