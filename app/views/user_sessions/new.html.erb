<h2><%= t("login") %></h2>
<hr />

<div class="prepend-1">
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login, t("login_account") %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password, t("password") %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, t("remember_me") %><br />
  <br />
  <%= f.submit t("login"), :class => 'submit' %>
<% end %>
</div>
<hr class="space" />